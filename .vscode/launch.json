// filepath: /Users/ryan/git/cac/.vscode/launch.json
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug JiraCLI",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/jiracli/cli/main.py",
      "args": [
        "issue",
        "list",
        "--verbose",
        // "--help"
        // "--project",
        // "storage"
        // "--mine"
        // "--done"
      ], // Replace with the subcommand and action you want to debug
      "console": "integratedTerminal"
    },
    {
      "name": "Poetry run tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "cwd": "${workspaceFolder}",
      "args": [
        "-v"
      ],
      "python": "${command:python.interpreterPath}",
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}
